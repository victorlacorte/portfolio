{
  "name": "portfolio-gsheets",
  "version": "1.0.0",
  "description": "Code used by the GSheets Porfolio document",
  "scripts": {
    "build": "./scripts/build.sh",
    "prettier": "prettier \"**/*.+(js|ts|json|md)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "check-types": "tsc",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "clasp:push": "clasp push",
    "validate": "npm run check-format && npm run check-types && npm run lint && npm run test:ci"
  },
  "engines": {
    "node": "^12.16.0",
    "npm": "^6.14.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|ts|json|md)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@google/clasp": "^2.3.0",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "faker": "^5.1.0",
    "gas-local": "^1.3.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.5"
  },
  "dependencies": {}
}
