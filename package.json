{
  "name": "portfolio-gsheets",
  "version": "1.0.0",
  "description": "Code used by the GSheets Porfolio document",
  "scripts": {
    "build": "tsc",
    "prettier": "prettier \"**/*.+(js|ts|json|md)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts .",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "clasp:push": "clasp push",
    "validate": "npm run check-format && npm run build && npm run test:ci"
  },
  "engines": {
    "node": "^12.16.0",
    "npm": "^6.14.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-setup"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|ts|json|md)": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "gas-local": "^1.3.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.5",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
