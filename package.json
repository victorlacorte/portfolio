{
  "name": "clasp_learning",
  "version": "1.0.0",
  "description": "Clasp learning and project best practices",
  "scripts": {
    "build": "tsc",
    "prettier": "prettier \"**/*.+(js|ts|json)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run check-format && npm run build && npm run test",
    "clasp:push": "npm run validate && clasp push"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-setup"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|css|html|md)": [
      "prettier",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@types/node": "^13.11.1",
    "gas-local": "^1.3.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.5",
    "prettier": "^2.0.4",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
